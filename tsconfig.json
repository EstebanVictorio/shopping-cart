{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "target": "ES2019",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "pages/*": ["pages/*"],
      "hooks/*": ["hooks/*"],
      "store/*": ["store/*"],
      "sagas/*": ["sagas/*"],
      "actions/*": ["actions/*"],
      "services/*": ["services/*"],
      "reducers/*": ["reducers/*"],
      "components/*": ["components/*"],
      "action-creators/*": ["action-creators/*"]
    }
  },
  "exclude": ["node_modules"]
}

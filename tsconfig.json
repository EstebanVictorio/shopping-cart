{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": "./src",
    "target": "ES2019",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowUmdGlobalAccess": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "pages/*": ["pages/*"],
      "hooks/*": ["hooks/*"],
      "components/*": ["components/*"]
    }
  },
  "exclude": ["node_modules"]
}
